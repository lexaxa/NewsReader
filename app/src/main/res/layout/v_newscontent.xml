<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_newscontent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_published_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        tools:text="01.01.2001"/>

    <TextView
        android:id="@+id/tv_author_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/tv_published_details"
        android:textStyle="bold"
        tools:text="author" />

    <TextView
        android:id="@+id/tv_title_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_author_details"
        android:textSize="18sp"
        tools:text="title"/>

    <TextView
        android:id="@+id/tv_description_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_title_details"
        tools:text="description"/>

    <TextView
        android:id="@+id/tv_link_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/tv_description_details"
        android:text="Ссылка на источник:"
        android:textSize="12sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_link_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignBaseline="@id/tv_link_text"
        android:layout_toEndOf="@id/tv_link_text"
        tools:text="link"
        android:visibility="visible"/>

</RelativeLayout>